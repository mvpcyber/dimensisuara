
PORT=5000
# Konfigurasi Database (Sesuaikan dengan XAMPP/Localhost Anda)
DB_HOST=127.0.0.1
DB_USER=root
DB_PASSWORD=
DB_NAME=dimensi_suara_db

# Kunci Rahasia untuk Login (Bebas diganti)
JWT_SECRET=rahasia_dapur_dimensi_suara_2024_secure

# Konfigurasi Email (Opsional - biarkan default jika belum punya)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=email@domain.com
SMTP_PASS=password_app

# --- GOOGLE INTEGRATION ---
# 1. Buat Service Account di Google Cloud Console
# 2. Download JSON Key, buka, dan copy client_email & private_key
# Private key biasanya dimulai dengan -----BEGIN PRIVATE KEY-----
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=

# 3. ID Spreadsheet (dari URL Google Sheets: d/[ID]/edit)
GOOGLE_SHEET_ID=

# 4. ID Folder Google Drive Utama (Tempat rilis & kontrak disimpan)
GOOGLE_DRIVE_PARENT_FOLDER_ID=
